{
  "env": {
    "es2021": true,
    "node": true,
    "jest/globals": true
  },
  "extends": ["prettier", "eslint:recommended","plugin:react/recommended","plugin:react/jsx-runtime"],
  "plugins": ["jest", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "tabWidth": 2,
        "printWidth": 140,
        "singleQuote": true,
        "bracketSameLine": false,
        "trailingComma": "all",
        "arrowParens": "always"
      }
    ]
  }
}
